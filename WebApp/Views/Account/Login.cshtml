@model WebApp.Models.ViewModels.LoginViewModel

@{
    Layout = null; // Esta línea evita que esta vista use el layout predeterminado
}

<!DOCTYPE html>
<html data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loginStyle.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/b4396ba374.js" crossorigin="anonymous"></script>
</head>
<body>
    <img class="bg-image " src="https://images.unsplash.com/photo-1619642751034-765dfdf7c58e?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Bg image" />
    <section>

        <div class="logo pe-none">
            <img src="~/css/logo mersh.png" alt="Logo Mersh Mecanica" />

        </div>
        <div class="contenedor shadow-lg">

            <div class="formulario">
                <form asp-action="Login" method="post">
                    <h2>Iniciar sesión</h2>
                    <div class="form-group">
                        <i class="fa-solid fa-envelope"></i>
                        <input asp-for="Username" required />
                        <label asp-for="Username">Usuario</label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fa-solid fa-lock"></i>
                        <input asp-for="Password" type="password" required />
                        <label asp-for="Password">Contraseña</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div>
                        <button type="submit" class="iniciar btn-secondary btn">Ingresar</button>
                        @if (ViewData["LoginError"] != null)
                        {
                            <div class="alert alert-danger mt-2" role="alert">
                                @ViewData["LoginError"]
                            </div>
                        }
                        <div class="registrar">
                            <p>¿No tiene un usuario? <a asp-controller="Account" asp-action="Register">Crear usuario</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>