@model WebApp.Models.ViewModels.LoginViewModel


<div class="row mt-5 justify-content-center">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-header">
                <h2>Iniciar Sesion</h2>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="form-group">
                        <label asp-for="Username">Usuario</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Password">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary">Ingresar</button>
                    </div>
                    @if(ViewData["LoginError"] != null)
                    {
                        <div class="alert alert-danger mt-2" role="alert">
                            @ViewData["LoginError"]
                        </div>
                    }
                    ¿No tiene un usuario? <a asp-controller="Account" asp-action="Register">Crear Usuario</a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
      
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
       
    }
}